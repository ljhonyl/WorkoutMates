<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cvRanking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/colorTarjetas"
        app:cardCornerRadius="20dp"
        android:layout_marginBottom="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:paddingEnd="20dp">

        <TextView
                android:id="@+id/tvTituloRanking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="La actividad realizada el "
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingBottom="8dp"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pasos"
                app:layout_constraintTop_toBottomOf="@+id/tvTituloRanking"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:id="@+id/tvContadorPasosRanking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginStart="100dp"
                app:layout_constraintTop_toBottomOf="@+id/tvTituloRanking"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingBottom="8dp"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kilómetros"
                app:layout_constraintTop_toBottomOf="@id/tvContadorPasosRanking"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:id="@+id/tvContadorKilometrosRanking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginStart="100dp"
                app:layout_constraintTop_toBottomOf="@id/tvContadorPasosRanking"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingBottom="7dp"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calorías"
                app:layout_constraintTop_toBottomOf="@id/tvContadorKilometrosRanking"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:id="@+id/tvContadorCaloriasRanking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginStart="100dp"
                app:layout_constraintTop_toBottomOf="@id/tvContadorKilometrosRanking"
                app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>